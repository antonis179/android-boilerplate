<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextInputLayoutErrorStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="fontPath">ubuntu/RobotoBold.ttf</item>
    </style>

    <style name="Text.Regular" parent="@android:style/TextAppearance">
        <item name="fontPath">ubuntu/Ubuntu-regular.ttf</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="Text.Bold" parent="@android:style/TextAppearance">
        <item name="fontPath">ubuntu/Ubuntu-bold.ttf</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Italic" parent="@android:style/TextAppearance">
        <item name="fontPath">ubuntu/Ubuntu-regular_italic.ttf</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- X Small variants -->
    <style name="Text.Regular.ExtraSmall" parent="style/Text.Regular">
        <item name="android:textSize">@dimen/text_xsmall</item>
    </style>
    <style name="Text.Bold.ExtraSmall" parent="@style/Text.Bold">
        <item name="android:textSize">@dimen/text_xsmall</item>
    </style>
    <style name="Text.Italic.ExtraSmall" parent="@style/Text.Italic">
        <item name="android:textSize">@dimen/text_xsmall</item>
    </style>

    <!-- Small variants -->
    <style name="Text.Regular.Small" parent="style/Text.Regular">
        <item name="android:textSize">@dimen/text_small</item>
    </style>
    <style name="Text.Bold.Small" parent="@style/Text.Bold">
        <item name="android:textSize">@dimen/text_small</item>
    </style>
    <style name="Text.Italic.Small" parent="@style/Text.Italic">
        <item name="android:textSize">@dimen/text_small</item>
    </style>


    <!-- Large variants -->
    <style name="Text.Regular.Large" parent="style/Text.Regular">
        <item name="android:textSize">@dimen/text_large</item>
    </style>
    <style name="Text.Bold.Large" parent="@style/Text.Bold">
        <item name="android:textSize">@dimen/text_large</item>
    </style>
    <style name="Text.Italic.Large" parent="@style/Text.Italic">
        <item name="android:textSize">@dimen/text_large</item>
    </style>


    <!--
        Specific Fonts
    -->

    <!-- Dashboard Server card -->
    <style name="Text.Regular.Activity.Description" parent="style/Text.Regular">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>


</resources>