<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="Card.Dark" parent="@style/CardView.Dark" />
    <style name="Card.Light" parent="@style/CardView.Light" />

	<style name="Card.Dark.Large" parent="@style/Card.Dark">
		<item name="android:focusable">true</item>
		<item name="cardPreventCornerOverlap">false</item>
		<item name="cardUseCompatPadding">true</item>

		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/card_height</item>

		<item name="android:foreground">?android:attr/selectableItemBackground</item>
		<item name="cardCornerRadius">2dp</item>
		<item name="cardElevation">5dp</item>
		<item name="contentPadding">2dp</item>
	</style>

	<style name="Card.Light.Large" parent="@style/Card.Light">
		<item name="android:focusable">true</item>
		<item name="cardPreventCornerOverlap">false</item>
		<item name="cardUseCompatPadding">true</item>

		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/card_height</item>

		<item name="android:foreground">?android:attr/selectableItemBackground</item>
		<item name="cardCornerRadius">2dp</item>
		<item name="cardElevation">5dp</item>
		<item name="contentPadding">2dp</item>
	</style>

</resources>